generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  password     String
  sgcId        String?  @map("sgc_id")
  sgcStatus    String?  @default("pending")
  sgcLastSync  DateTime?
  active       Boolean  @default(true)
  role         String   @default("desbravador")
  createdAt    DateTime @default(now())
}
